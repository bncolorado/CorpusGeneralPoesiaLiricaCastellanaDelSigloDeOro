    <body>
      <head>
        <title>Las tristes lágrimas mías</title>
      </head>
      <lg cert="high" type="Glosa">
        <l met="-|2|-|4|-|-|7|-|" n="1">
          <!--Las tristes lágrimas mías-->
          <w lemma="el" type="DA0FP0">las|</w>
          <w lemma="triste" type="AQ0CP00">tris|tes|</w>
          <w lemma="lágrima" type="NCFP000">lá|gri|mas|</w>
          <w lemma="mío" type="AP0FP1S">mí|as|</w>
        </l>
        <l met="-|2|-|4|-|-|7|-|" n="2">
          <!--en piedras hacen señal-->
          <w lemma="en" type="SP">en|</w>
          <w lemma="piedra" type="NCFP000">pie|dras|</w>
          <w lemma="hacer" type="VMIP3P0">ha|cen|</w>
          <w lemma="señal" type="NCFS000">se|ñal|</w>
        </l>
        <l met="-|2|3|-|-|-|7|-|" n="3">
          <!--y en vos nunca por mi mal.-->
          <w lemma="y" type="CC">y</w>
          <w lemma="en" type="SP">en|</w>
          <w lemma="vos" type="PP2CS0P">vos|</w>
          <w lemma="nunca" type="RG">nun|ca|</w>
          <w lemma="por" type="SP">por|</w>
          <w lemma="mi" type="DP1CSS">mi|</w>
          <w lemma="mal" type="NCMS000">mal|</w>
        </l>
        <l met="1|-|" n="4">
          <!--Glosa-->
          <w lemma="glosar" type="VMIP3S0">glo|sa|</w>
        </l>
        <l met="-|-|3|-|-|-|7|-|" n="5">
          <!--Vuestra rara gentileza-->
          <w lemma="vuestro" type="DP2FSP">vues|tra|</w>
          <w lemma="raro" type="AQ0FS00">ra|ra|</w>
          <w lemma="gentileza" type="NCFS000">gen|ti|le|za|</w>
        </l>
        <l met="1|-|3|-|-|-|7|-|" n="6">
          <!--no se ofende con serviros,-->
          <w lemma="no" type="RN">no|</w>
          <w lemma="se" type="P00CN00">se</w>
          <w lemma="ofender" type="VMIP3S0">o|fen|de|</w>
          <w lemma="con" type="SP">con|</w>
          <w lemma="servir" type="VMN0000">ser|vir|</w>
          <w lemma="os" type="PP2CP00">o|s|</w>
        </l>
        <l met="-|-|3|4|5|-|7|-|" n="7">
          <!--pues mi mal no os da tristeza-->
          <w lemma="pues" type="CS">pues|</w>
          <w lemma="mi" type="DP1CSS">mi|</w>
          <w lemma="mal" type="NCMS000">mal|</w>
          <w lemma="no" type="RN">no</w>
          <w lemma="os" type="PP2CP00">os|</w>
          <w lemma="dar" type="VMIP3S0">da|</w>
          <w lemma="tristeza" type="NCFS000">tris|te|za|</w>
        </l>
        <l met="-|-|3|-|-|-|7|-|" n="8">
          <!--ni jamás vuestra dureza-->
          <w lemma="ni" type="CC">ni|</w>
          <w lemma="jamás" type="RG">ja|más|</w>
          <w lemma="vuestro" type="DP2FSP">vues|tra|</w>
          <w lemma="dureza" type="NCFS000">du|re|za|</w>
        </l>
        <l met="1|-|3|-|-|-|7|-|" n="9">
          <!--dio lugar a mis suspiros.-->
          <w lemma="dar" type="VMIS3S0">dio|</w>
          <w lemma="lugar" type="NCMS000">lu|gar|</w>
          <w lemma="a" type="SP">a|</w>
          <w lemma="mi" type="DP1CPS">mis|</w>
          <w lemma="suspiro" type="NCMP000">sus|pi|ros|</w>
        </l>
        <l met="1|2|-|-|-|-|7|-|" n="10">
          <!--No fueron con mis porfías-->
          <w lemma="no" type="RN">no|</w>
          <w lemma="ser" type="VSIS3P0">fue|ron|</w>
          <w lemma="con" type="SP">con|</w>
          <w lemma="mi" type="DP1CPS">mis|</w>
          <w lemma="porfía" type="NCFP000">por|fí|as|</w>
        </l>
        <l met="-|-|-|4|-|-|7|-|" n="11">
          <!--vuestras entrañas mudadas,-->
          <w lemma="vuestro" type="DP2FPP">vues|tras|</w>
          <w lemma="entraña" type="NCFP000">en|tra|ñas|</w>
          <w lemma="mudar" type="VMP00PF">mu|da|das|</w>
        </l>
        <l met="-|-|3|4|-|-|7|-|" n="12">
          <!--aunque veis noches y días-->
          <w lemma="aunque" type="CC">aun|que|</w>
          <w lemma="ver" type="VMIP2P0">veis|</w>
          <w lemma="noche" type="NCFP000">no|ches|</w>
          <w lemma="y" type="CC">y|</w>
          <w lemma="día" type="NCMP000">dí|as|</w>
        </l>
        <l met="-|2|-|4|-|-|7|-|" n="13">
          <!--con gran dolor derramadas-->
          <w lemma="con" type="SP">con|</w>
          <w lemma="gran" type="AQ0CS00">gran|</w>
          <w lemma="dolor" type="NCMS000">do|lor|</w>
          <w lemma="derramar" type="VMP00PF">de|rra|ma|das|</w>
        </l>
        <l met="-|2|-|4|-|-|7|-|" n="14">
          <!--las tristes lágrimas mías.-->
          <w lemma="el" type="DA0FP0">las|</w>
          <w lemma="triste" type="AQ0CP00">tris|tes|</w>
          <w lemma="lágrima" type="NCFP000">lá|gri|mas|</w>
          <w lemma="mío" type="AP0FP1S">mí|as|</w>
        </l>
        <l met="1|2|-|-|-|-|7|-|" n="15">
          <!--Fuerte es vuestra condición,-->
          <w lemma="fuerte" type="AQ0CS00">fuer|te</w>
          <w lemma="ser" type="VSIP3S0">es|</w>
          <w lemma="vuestro" type="DP2FSP">vues|tra|</w>
          <w lemma="condición" type="NCFS000">con|di|ción|</w>
        </l>
        <l met="-|-|-|4|-|-|7|-|" n="16">
          <!--que en acabarme porfía,-->
          <w lemma="que" type="CS">que</w>
          <w lemma="en" type="SP">en|</w>
          <w lemma="acabar" type="VMN0000">a|ca|bar|</w>
          <w lemma="me" type="PP1CS00">me|</w>
          <w lemma="porfía" type="NCFS000">por|fí|a|</w>
        </l>
        <l met="-|2|3|-|-|-|7|-|" n="17">
          <!--y más fuerte el corazón,-->
          <w lemma="y" type="CC">y|</w>
          <w lemma="más" type="RG">más|</w>
          <w lemma="fuerte" type="AQ0CS00">fuer|te</w>
          <w lemma="el" type="DA0MS0">el|</w>
          <w lemma="corazón" type="NCMS000">co|ra|zón|</w>
        </l>
        <l met="-|-|3|-|5|-|7|-|" n="18">
          <!--que viviendo en tal pasión-->
          <w lemma="que" type="CS">que|</w>
          <w lemma="vivir" type="VMG0000">vi|vien|do</w>
          <w lemma="en" type="SP">en|</w>
          <w lemma="tal" type="DD0CS0">tal|</w>
          <w lemma="pasión" type="NCFS000">pa|sión|</w>
        </l>
        <l met="1|-|3|-|-|-|7|-|" n="19">
          <!--no le mata la agonía.-->
          <w lemma="no" type="RN">no|</w>
          <w lemma="le" type="PP3CSD0">le|</w>
          <w lemma="matar" type="VMIP3S0">ma|ta|</w>
          <w lemma="el" type="DA0FS0">la</w>
          <w lemma="agonía" type="NCFS000">a|go|ní|a|</w>
        </l>
        <l met="-|2|3|-|5|6|7|-|" n="20">
          <!--Que si un rato afloja un mal,-->
          <w lemma="que" type="CS">que|</w>
          <w lemma="si" type="CS">si</w>
          <w lemma="uno" type="DI0MS0">un|</w>
          <w lemma="rato" type="NCMS000">ra|to</w>
          <w lemma="aflojar" type="VMIP3S0">a|flo|ja</w>
          <w lemma="uno" type="DI0MS0">un|</w>
          <w lemma="mal" type="NCMS000">mal|</w>
        </l>
        <l met="-|-|3|-|-|-|7|-|" n="21">
          <!--aunque sea de los mayores,-->
          <w lemma="aunque" type="CC">aun|que|</w>
          <w lemma="ser" type="VSSP1S0">sea|</w>
          <w lemma="de" type="SP">de|</w>
          <w lemma="el" type="DA0MP0">los|</w>
          <w lemma="mayor" type="AQ0CP00">ma|yo|res|</w>
        </l>
        <l met="1|2|3|-|5|-|7|-|" n="22">
          <!--no da pena tan mortal,-->
          <w lemma="no" type="RN">no|</w>
          <w lemma="dar" type="VMIP3S0">da|</w>
          <w lemma="pena" type="NCFS000">pe|na|</w>
          <w lemma="tan" type="RG">tan|</w>
          <w lemma="mortal" type="AQ0CS00">mor|tal|</w>
        </l>
        <l met="-|-|-|4|-|-|7|-|" n="23">
          <!--mas los continuos dolores-->
          <w lemma="mas" type="CC">mas|</w>
          <w lemma="el" type="DA0MP0">los|</w>
          <w lemma="continuo" type="AQ0MP00">con|ti|nuos|</w>
          <w lemma="dolor" type="NCMP000">do|lo|res|</w>
        </l>
        <l met="-|2|-|4|-|-|7|-|" n="24">
          <!--en piedras hacen señal.-->
          <w lemma="en" type="SP">en|</w>
          <w lemma="piedra" type="NCFP000">pie|dras|</w>
          <w lemma="hacer" type="VMIP3P0">ha|cen|</w>
          <w lemma="señal" type="NCFS000">se|ñal|</w>
        </l>
        <l met="-|2|3|4|-|-|7|-|" n="25">
          <!--Amor es un sentimiento-->
          <w lemma="amor" type="NP00000">a|mor|</w>
          <w lemma="ser" type="VSIP3S0">es|</w>
          <w lemma="uno" type="DI0MS0">un|</w>
          <w lemma="sentimiento" type="NCMS000">sen|ti|mien|to|</w>
        </l>
        <l met="1|-|3|-|-|-|7|-|" n="26">
          <!--blando, dulce y regalado;-->
          <w lemma="blando" type="AQ0MS00">blan|do|</w>
          <w lemma="dulce" type="AQ0CS00">dul|ce</w>
          <w lemma="y" type="CC">y|</w>
          <w lemma="regalar" type="VMP00SM">re|ga|la|do|</w>
        </l>
        <l met="1|-|3|-|5|-|7|-|" n="27">
          <!--vos causáis el mal que siento,-->
          <w lemma="vos" type="PP2CS0P">vos|</w>
          <w lemma="causar" type="VMIP2P0">cau|sáis|</w>
          <w lemma="el" type="DA0MS0">el|</w>
          <w lemma="mal" type="NCMS000">mal|</w>
          <w lemma="que" type="PR0CN00">que|</w>
          <w lemma="sentar" type="VMIP1S0">sien|to|</w>
        </l>
        <l met="-|2|3|-|5|-|7|-|" n="28">
          <!--que amor solo da tormento-->
          <w lemma="que" type="CS">que</w>
          <w lemma="amor" type="NCMS000">a|mor|</w>
          <w lemma="solo" type="AQ0MS00">so|lo|</w>
          <w lemma="dar" type="VMIP3S0">da|</w>
          <w lemma="tormento" type="NCMS000">tor|men|to|</w>
        </l>
        <l met="-|-|3|-|-|-|7|-|" n="29">
          <!--al que vive desamado.-->
          <w lemma="al" type="SP">al|</w>
          <w lemma="que" type="PR0CN00">que|</w>
          <w lemma="vivir" type="VMIP3S0">vi|ve|</w>
          <w lemma="desamar" type="VMP00SM">de|sa|ma|do|</w>
        </l>
        <l met="1|2|-|4|-|-|7|-|" n="30">
          <!--Y esta es mi pena mortal,-->
          <w lemma="y" type="CC">y</w>
          <w lemma="este" type="PD0FS00">es|ta</w>
          <w lemma="ser" type="VSIP3S0">es|</w>
          <w lemma="mi" type="DP1CSS">mi|</w>
          <w lemma="pena" type="NCFS000">pe|na|</w>
          <w lemma="mortal" type="AQ0CS00">mor|tal|</w>
        </l>
        <l met="-|-|3|-|5|-|7|-|" n="31">
          <!--que el amor, después que os vi,-->
          <w lemma="que" type="CS">que</w>
          <w lemma="el" type="DA0MS0">el|</w>
          <w lemma="amor" type="NCMS000">a|mor|</w>
          <w lemma="después" type="RG">des|pués|</w>
          <w lemma="que" type="CS">que</w>
          <w lemma="os" type="PP2CP00">os|</w>
          <w lemma="ver" type="VMIS1S0">vi|</w>
        </l>
        <l met="-|-|3|-|-|-|7|-|" n="32">
          <!--como cosa natural,-->
          <w lemma="como" type="CS">co|mo|</w>
          <w lemma="cosa" type="NCFS000">co|sa|</w>
          <w lemma="natural" type="AQ0CS00">na|tu|ral|</w>
        </l>
        <l met="-|-|3|4|-|6|7|-|" n="33">
          <!--por mi bien siempre está en mí-->
          <w lemma="por" type="SP">por|</w>
          <w lemma="mi" type="DP1CSS">mi|</w>
          <w lemma="bien" type="NCMS000">bien|</w>
          <w lemma="siempre" type="RG">siem|pre</w>
          <w lemma="estar" type="VMIP3S0">es|tá</w>
          <w lemma="en" type="SP">en|</w>
          <w lemma="mí" type="PP1CSO0">mí|</w>
        </l>
        <l met="-|2|3|-|-|-|7|-|" n="34">
          <!--y en vos nunca por mi mal.-->
          <w lemma="y" type="CC">y</w>
          <w lemma="en" type="SP">en|</w>
          <w lemma="vos" type="PP2CS0P">vos|</w>
          <w lemma="nunca" type="RG">nun|ca|</w>
          <w lemma="por" type="SP">por|</w>
          <w lemma="mi" type="DP1CSS">mi|</w>
          <w lemma="mal" type="NCMS000">mal|</w>
        </l>
