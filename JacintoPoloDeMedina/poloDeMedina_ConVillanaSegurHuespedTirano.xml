    <body>
      <head>
        <title>Con villana segur, huésped tirano,</title>
      </head>
      <lg cert="high" type="Silva">
        <l met="-|-|3|-|-|6|7|-|-|10|-|" n="1">
          <!--Con villana segur, huésped tirano,-->
          <w lemma="con" type="SP">con|</w>
          <w lemma="villano" type="AQ0FS00">vi|lla|na|</w>
          <w lemma="segur" type="NCFS000">se|gur|</w>
          <w lemma="huésped" type="NCMS000">hués|ped|</w>
          <w lemma="tirano" type="AQ0MS00">ti|ra|no|</w>
        </l>
        <l met="1|-|-|-|-|6|7|-|-|10|-|" n="2">
          <!--ya de su obligación mal defendida,-->
          <w lemma="ya" type="RG">ya|</w>
          <w lemma="de" type="SP">de|</w>
          <w lemma="su" type="DP3CSN">su</w>
          <w lemma="obligación" type="NCFS000">o|bli|ga|ción|</w>
          <w lemma="mal" type="RG">mal|</w>
          <w lemma="defender" type="VMP00SF">de|fen|di|da|</w>
        </l>
        <l met="-|2|3|-|-|6|-|" n="3">
          <!--segó joven tu vida,-->
          <w lemma="segar" type="VMIS3S0">se|gó|</w>
          <w lemma="joven" type="AQ0CS00">jo|ven|</w>
          <w lemma="tu" type="DP2CSS">tu|</w>
          <w lemma="vida" type="NCFS000">vi|da|</w>
        </l>
        <l met="-|-|-|4|-|6|-|8|-|10|-|" n="4">
          <!--que la perdona el fuego y no su mano;-->
          <w lemma="que" type="CS">que|</w>
          <w lemma="lo" type="PP3FSA0">la|</w>
          <w lemma="perdonar" type="VMIP3S0">per|do|na</w>
          <w lemma="el" type="DA0MS0">e|l</w>
          <w lemma="fuego" type="NCMS000">fue|go</w>
          <w lemma="y" type="CC">y|</w>
          <w lemma="no" type="RN">no|</w>
          <w lemma="su" type="DP3CSN">su|</w>
          <w lemma="mano" type="NCFS000">ma|no|</w>
        </l>
        <l met="-|-|3|-|-|6|-|-|-|10|-|" n="5">
          <!--y vertiéndola en nácar liquidada-->
          <w lemma="y" type="CC">y|</w>
          <w lemma="verter" type="VMG0000">ver|tien|do|</w>
          <w lemma="lo" type="PP3FSA0">la</w>
          <w lemma="en" type="SP">en|</w>
          <w lemma="nácar" type="NCMS000">ná|car|</w>
          <w lemma="liquidar" type="VMP00SF">li|qui|da|da|</w>
        </l>
        <l met="-|2|-|-|-|6|-|-|-|10|-|" n="6">
          <!--el valle la posee transformada-->
          <w lemma="el" type="DA0MS0">el|</w>
          <w lemma="valle" type="NCMS000">va|lle|</w>
          <w lemma="lo" type="PP3FSA0">la|</w>
          <w lemma="poseer" type="VMIP3S0">po|se|e|</w>
          <w lemma="transformar" type="VMP00SF">trans|for|ma|da|</w>
        </l>
        <l met="-|-|-|4|-|-|-|8|-|10|-|" n="7">
          <!--en esmeralda, porque infausta historia-->
          <w lemma="en" type="SP">en|</w>
          <w lemma="esmeralda" type="NCFS000">es|me|ral|da|</w>
          <w lemma="porque" type="CS">por|que</w>
          <w lemma="infausto" type="AQ0FS00">in|faus|ta</w>
          <w lemma="historia" type="NCFS000">his|to|ria|</w>
        </l>
        <l met="1|-|-|4|-|6|-|-|-|10|-|" n="8">
          <!--verde conserve el prado en la memoria;-->
          <w lemma="verde" type="AQ0CS00">ver|de|</w>
          <w lemma="conservar" type="VMSP3S0">con|ser|ve</w>
          <w lemma="el" type="DA0MS0">el|</w>
          <w lemma="prado" type="NCMS000">pra|do</w>
          <w lemma="en" type="SP">en|</w>
          <w lemma="el" type="DA0FS0">la|</w>
          <w lemma="memoria" type="NCFS000">me|mo|ria|</w>
        </l>
        <l met="-|2|-|4|-|-|-|8|-|10|-|" n="9">
          <!--y trueca en mirto Polidoro el nombre,-->
          <w lemma="y" type="CC">y|</w>
          <w lemma="trocar" type="VMIP3S0">true|ca</w>
          <w lemma="en" type="SP">en|</w>
          <w lemma="mirto" type="NCMS000">mir|to|</w>
          <w lemma="polidoro" type="NP00000">po|li|do|ro</w>
          <w lemma="el" type="DA0MS0">el|</w>
          <w lemma="nombre" type="NCMS000">nom|bre|</w>
        </l>
        <l met="-|-|-|4|-|-|-|8|-|10|-|" n="10">
          <!--para que enseñe tu desdicha al hombre.-->
          <w lemma="para" type="SP">pa|ra|</w>
          <w lemma="que" type="CS">que</w>
          <w lemma="enseñar" type="VMSP3S0">en|se|ñe|</w>
          <w lemma="tu" type="DP2CSS">tu|</w>
          <w lemma="desdicha" type="NCFS000">des|di|cha</w>
          <w lemma="al" type="SP">al|</w>
          <w lemma="hombre" type="NCMS000">hom|bre|</w>
        </l>
      </lg>
